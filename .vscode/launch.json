{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch Jekyll",
      "presentation": {
        "group": "Jekyll",
      },
      // "preLaunchTask": "Start Jekyll",
      "postDebugTask": "Stop Jekyll",
      "server": {
        "command": "bundle exec jekyll serve --watch --livereload --safe",
        "cwd": "${workspaceFolder}/docs",
        "localRoot": "${workspaceFolder}/docs/_site",
      },
      "runtimeArgs": ["--auto-open-devtools-for-tabs"],
      // "webRoot": "${workspaceFolder}/docs/_site",
      "url": "http://localhost:4000/lokis-reach-wiki/",
      "urlFilter": "http://localhost:4000/lokis-reach-wiki/*",
      "cleanUp": "onlyTab",
      "serverReadyAction": {
        "action": "debugWithChrome",
        "killOnServerStop": true,
      },
    }
  ]
}
