{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "presentation": {
    "reveal": "always",
    "panel": "dedicated",
    "showReuseMessage": false,
    "revealProblems": "onProblem",
    "group": "Jekyll",
    "clear": true,
    "focus": true,
    "close": true
  },
  "runOptions": {
    "instanceLimit": 1
  },
  "problemMatcher": {
    "background": {
      "beginsPattern": "^\\s*Jekyll Feed: Generating feed for posts",
      "endsPattern": "^\\s*\\.\\.\\.done in .+$|^\\s*Error: Run jekyll build --trace .+$",
    },
    "fileLocation": [
      "relative",
      "${workspaceFolder}/docs"
    ],
    "applyTo": "allDocuments",
    "pattern": [
      {
        "regexp": "^\\s*Liquid Exception:\\s+Liquid .+ (\\S+) \\(line (\\d+)\\): (.*) in (/.+)$",
        "line": 2,
        "file": 4,
        "message": 3,
        "severity": 1
      }
    ]
  },
  "windows": {
    "options": {
      "shell": {
        "executable": "powershell.exe",
        "args": [
          "-command"
        ]
      }
    }
  },
  "linux": {
    "options": {
      "shell": {
        "executable": "bash",
        "args": [
          "-c"
        ]
      }
    }
  },
  "tasks": [
    {
      "label": "Start Jekyll",
      "detail": "Starts a local Jekyll server",
      "type": "shell",
      "command": "bundle exec jekyll serve --watch --livereload --safe",
      "isBackground": true,
      "options": {
        "cwd": "${workspaceFolder}/docs"
      },
    },
    {
      "label": "Stop Jekyll",
      "detail": "Stops a local Jekyll server",
      "type": "shell",
      "command": ["\".\\JekyllControl.ps1\"",
        "-Terminate"],
      "options": {
        "cwd": "${workspaceFolder}",
        "shell": {
          "executable": "powershell",
          "args": [
            "-command"
          ]
        },
      },
      "presentation": {
        "reveal": "never",
        "focus": false
      },
      "problemMatcher": []
    },
    {
      "label": "Build Jekyll site",
      "type": "shell",
      "command": "bundle exec jekyll build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "options": {
        "cwd": "${workspaceFolder}/docs"
      },
    }
  ]
}
