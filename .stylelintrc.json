{
  "extends": ["stylelint-config-standard"],
  "reportDescriptionlessDisables": null,
  "reportInvalidScopeDisables": true,
  "reportNeedlessDisables": true,
  "defaultSeverity": "warning",
  "plugins": ["stylelint-order"],
  "overrides": [],
  "rules": {
    "comment-empty-line-before": null,
    "custom-property-empty-line-before": null,
    "declaration-block-no-redundant-longhand-properties": null,
    "property-no-vendor-prefix": null,
    "color-hex-length": null,
    "number-max-precision": 5,
    "alpha-value-notation": null,
    "hue-degree-notation": null,
    "declaration-empty-line-before": [
      "never",
      {
        "ignore": ["after-comment", "after-declaration", "inside-single-line-block", "first-nested"]
      }
    ],
    "declaration-block-no-duplicate-properties": [
      true,
      {
        "ignore": ["consecutive-duplicates"]
      }
    ],
    "order/order": ["custom-properties", "declarations", "rules", "at-rules"],
    "order/properties-order": [
      [
        "all",
        {
          "groupName": "content",
          "properties": ["content", "quotes"],
          "emptyLineBefore": "always",
          "noEmptyLineBetween": true
        },
        {
          "groupName": "display & visibility",
          "properties": ["visibility", "opacity", "z-index", "display"],
          "emptyLineBefore": "always",
          "noEmptyLineBetween": true
        },
        {
          "groupName": "layout",
          "properties": [
            "flex",
            "grid",
            "grid-area",
            "grid-template-areas",
            "grid-template-columns",
            "grid-template-rows",
            "grid-auto-columns",
            "grid-auto-rows",
            "grid-auto-flow",
            "grid-column",
            "grid-column-start",
            "grid-column-end",
            "grid-row",
            "grid-row-start",
            "grid-row-end",
            "grid-gap",
            "grid-row-gap",
            "grid-column-gap",
            "align-content",
            "align-items",
            "align-self",
            "justify-content",
            "justify-items",
            "justify-self",
            "order",
            "gap",
            "column-gap",
            "row-gap",
            "columns",
            "column-count",
            "column-width",
            "column-fill",
            "column-rule",
            "column-rule-width",
            "column-rule-style",
            "column-rule-color",
            "column-span",
            "table-layout",
            "border-collapse",
            "border-spacing",
            "empty-cells",
            "caption-side",
            "list-style",
            "list-style-type",
            "list-style-position",
            "list-style-image",
            "counter-reset",
            "counter-increment"
          ],
          "noEmptyLineBetween": true
        },
        {
          "groupName": "positioning",
          "properties": ["position", "top", "right", "bottom", "left", "float", "clear"],
          "noEmptyLineBetween": true
        },
        {
          "groupName": "box model",
          "properties": [
            "box-sizing",
            "margin",
            "margin-top",
            "margin-right",
            "margin-bottom",
            "margin-left",
            "margin-block",
            "margin-block-start",
            "margin-block-end",
            "margin-inline-start",
            "margin-inline-end",
            "margin-inline",
            "outline",
            "outline-offset",
            "outline-width",
            "outline-style",
            "outline-color",
            "border",
            "border-top",
            "border-right",
            "border-bottom",
            "border-left",
            "border-width",
            "border-top-width",
            "border-right-width",
            "border-bottom-width",
            "border-left-width",
            "border-style",
            "border-top-style",
            "border-right-style",
            "border-bottom-style",
            "border-left-style",
            "border-color",
            "border-top-color",
            "border-right-color",
            "border-bottom-color",
            "border-left-color",
            "border-radius",
            "border-top-left-radius",
            "border-top-right-radius",
            "border-bottom-left-radius",
            "border-bottom-right-radius",
            "border-image",
            "border-image-source",
            "border-image-width",
            "border-image-outset",
            "border-image-repeat",
            "border-image-slice",
            "min-width",
            "width",
            "max-width",
            "min-height",
            "height",
            "max-height",
            "padding",
            "padding-top",
            "padding-right",
            "padding-bottom",
            "padding-left",
            "padding-block",
            "padding-block-start",
            "padding-block-end",
            "padding-inline",
            "padding-inline-start",
            "padding-inline-end"
          ],
          "emptyLineBefore": "always",
          "noEmptyLineBetween": true
        },
        {
          "groupName": "overflow & clipping",
          "properties": [
            "overflow",
            "overflow-x",
            "overflow-y",
            "overflow-block",
            "overflow-inline",
            "overflow-wrap",
            "clip-path",
            "clip-rule"
          ],
          "emptyLineBefore": "always",
          "noEmptyLineBetween": true
        },
        {
          "properties": ["resize"],
          "emptyLineBefore": "always",
          "noEmptyLineBetween": true
        },
        {
          "groupName": "box decorations",
          "properties": [
            "box-shadow",
            "background",
            "background-image",
            "background-position",
            "background-size",
            "background-repeat",
            "background-origin",
            "background-clip",
            "background-attachment",
            "background-color",
            "background-blend-mode",
            "cursor"
          ],
          "emptyLineBefore": "always",
          "noEmptyLineBetween": true
        },
        {
          "groupName": "transformations",
          "properties": [
            "backface-visibility",
            "perspective",
            "perspective-origin",
            "transform",
            "transform-origin",
            "transform-style"
          ],
          "emptyLineBefore": "always",
          "noEmptyLineBetween": true
        },
        {
          "groupName": "animations & transitions",
          "properties": [
            "animation",
            "animation-",
            "transition",
            "transition-property",
            "transition-duration",
            "transition-timing-function",
            "transition-delay"
          ],
          "emptyLineBefore": "always",
          "noEmptyLineBetween": true
        },
        {
          "groupName": "typography",
          "properties": [
            "direction",
            "color",
            "font",
            "font-family",
            "font-size",
            "font-size-adjust",
            "font-stretch",
            "font-weight",
            "font-variant",
            "font-style",
            "font-optical-sizing",
            "font-smoothing",
            "osx-font-smoothing",
            "tab-size",
            "vertical-align",
            "text-align",
            "text-align-last",
            "text-justify",
            "text-indent",
            "text-transform",
            "text-decoration",
            "text-decoration-color",
            "text-decoration-line",
            "text-decoration-style",
            "text-rendering",
            "text-shadow",
            "text-overflow",
            "text-fill-color",
            "line-height",
            "word-spacing",
            "word-wrap",
            "word-break",
            "white-space",
            "letter-spacing",
            "page-break-before",
            "page-break-inside",
            "page-break-after"
          ],
          "emptyLineBefore": "always",
          "noEmptyLineBetween": true
        }
      ],
      {
        "emptyLineBeforeUnspecified": "always"
      }
    ]
  }
}
