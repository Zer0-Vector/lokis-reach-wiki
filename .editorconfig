root = true

[*]
charset = utf-8
trim_trailing_whitespace = true
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
max_line_length = 136

[*.ps1]
end_of_line = crlf

[{docs/_includes/*,docs/_layouts/*}]
insert_final_newline = false

[docs/_layouts/default.html]
insert_final_newline = true
